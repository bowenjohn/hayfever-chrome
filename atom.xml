<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>Hayfever for Chrome: News and Updates</title>
	<id>http://mikedamage.github.com/hayfever-chrome:2011</id>
	<link rel="self" href="http://mikedamage.github.com/hayfever-chrome/atom.xml" />
	<link href="http://mikedamage.github.com/hayfever-chrome" type="text/html" rel="alternate" />
	<updated>{{ site.time | date_to_xmlschema }}</updated>

	<author>
		<name>Mike Green</name>
		<email>mike.is.green@gmail.com</email>
	</author>

	{% for post in site.posts %}
	<entry>
		<title>{{post.title}}</title>
		<link href="http://mikedamage.github.com/hayfever-chrome{{post.url}}" />
		<updated>{{post.date | date_to_xmlschema}}</updated>
		<id>http://mikedamage.github.com/hayfever-chrome{{post.id}}</id>
		<content type="html">
			{{ post.content | xml_escape }}
		</content>
	{% endfor %}
</feed>
